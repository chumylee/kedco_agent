<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tariff_adjustment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.wareproz.mac.kedco.TariffAdjustmentRequest">


    <EditText
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/inputtext"
        android:background="@drawable/rounded_edittext"
        android:layout_width="300dp"
        android:hint="Wrong Tariff"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/custname"
        android:layout_alignStart="@+id/submit" />

    <AutoCompleteTextView
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/accountno"
        android:background="@drawable/rounded_edittext"
        android:hint="Customen Acc No"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/getdetails"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/getdetails"
        style="?android:textAppearanceSmall"
        android:layout_height="45dp"
        android:text="Get Details"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:background="@drawable/button_bckgrnd"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="130dp" />

    <TextView
        android:text="No Customer Selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custname"
        android:textSize="21sp"
        android:layout_marginTop="39dp"
        tools:textStyle="bold"
        android:layout_below="@+id/accountno"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/submit"
        style="?android:textAppearanceSmall"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Proceed"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:background="@drawable/button_bckgrnd"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/bypass"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/bypass"
        android:background="@drawable/rounded_edittext"
        android:layout_width="300dp"
        android:hint="Correct Tariff"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/inputtext"
        android:layout_alignStart="@+id/inputtext" />


</RelativeLayout>
