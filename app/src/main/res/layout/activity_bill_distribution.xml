<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bill_distribution"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.wareproz.mac.kedco.BillDistribution">

    <AutoCompleteTextView
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/accountno"
        android:background="@drawable/rounded_edittext"
        android:hint="Customer Acc No"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/getdetails"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/getdetails"
        style="?android:textAppearanceSmall"
        android:layout_height="45dp"
        android:text="Get Details"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:background="@drawable/button_bckgrnd2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="130dp" />

    <TextView
        android:text="No Customer Selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custname"
        android:textSize="21sp"
        android:layout_marginTop="33dp"
        tools:textStyle="bold"
        android:layout_below="@+id/accountno"
        android:layout_centerHorizontal="true" />

    <DatePicker
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:id="@+id/datePicker3"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/submit"
        style="?android:textAppearanceSmall"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Proceed"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:background="@drawable/button_bckgrnd"
        android:layout_below="@+id/datePicker3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Select billing period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/custname"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
